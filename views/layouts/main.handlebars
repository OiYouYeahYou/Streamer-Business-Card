<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/css/style.css">
  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>

<body class="components">
  <header class="components">
    <img src="{{ logo }}" alt="{{ title }} Logo" class="header-logo header-item">

    <div class="header-item">
      <h1 class="header-text">{{ title }}</h1>

      <nav class="links">
        {{#each links }}
          <a href="{{ href }}">
            <img src="/svg/{{ platform }}.svg" class="header-img">
          </a>
        {{/each }}
      </nav>
    </div>
  </header>

  <article class="components" style="text-align:center">
    {{#if isLive}}
      <div id="twitch-embed"></div>
      <script src="https://embed.twitch.tv/embed/v1.js"></script>
      <script type="text/javascript">
        new Twitch.Embed( "twitch-embed", {
          width: 854,
          height: 480,
          channel: "{{ user }}"
        } );
      </script>
    {{/if }}
  </article>

  <footer class="components">
    <span class="attribution">
      Website by
      <a href="http://jasonderrythomas.com">Jason</a>
      for {{ user }}
    </span>
  </footer>
</body>

</html>
